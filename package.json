{
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
	"build-linux": "electron-builder -l"
  },
  "name": "soundcloud-rpc",
  "version": "1.0.0",
  "build": {
    "appId": "com.notsoundcloud.soundcloud",
    "productName": "SoundCloud",
    "asar": true,
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable",
      "icon": "icons/icon.ico",
      "artifactName": "soundcloud-win.${ext}"
    },
    "linux": {
      "target": "deb",
      "icon": "icons/icon.png",
      "artifactName": "soundcloud-linux.${ext}"
    }
  },
  "author": {"name": "John Doe", "email": "johndoe@example.com"},
  "homepage": "www.google.com"
}
